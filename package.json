{
  "name": "celo-network-monitor",
  "version": "0.0.1",
  "scripts": {
    "build": "npx tsc -p .",
    "postbuild": "copyfiles *.yaml build/",
    "start": "node ./src/main.js",
    "dev": "NODE_ENV=development ts-node-dev -r dotenv/config ./src/main.ts",
    "eslint": "npx eslint src/*.ts src/monitor/*.ts",
    "prettier": "prettier --write src/*.ts src/monitor/*.ts",
    "test": "ts-mocha -p tsconfig.json src/**/*.test.ts --exit",
    "prepare": "yarn run snyk-protect"
  },
  "_moduleAliases": {
    "~": "src"
  },
  "dependencies": {
    "@celo/celocli": "1.2.0",
    "@celo/contractkit": "1.2.0",
    "@pagerduty/pdjs": "2.2.2",
    "bignumber.js": "9.0.1",
    "discord-webhook-node": "1.1.8",
    "js-yaml": "4.1.0",
    "moment": "2.29.1",
    "moment-timezone": "0.5.33",
    "web-request": "1.0.7",
    "web3": "1.3.6",
    "dotenv": "10.0.0"
  },
  "devDependencies": {
    "@types/mocha": "8.2.2",
    "@types/node": "15.12.2",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "copyfiles": "2.4.1",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "mocha": "8.4.0",
    "prettier": "2.3.1",
    "ts-mocha": "8.0.0",
    "ts-node-dev": "1.1.6",
    "ts-sinon": "2.0.1",
    "typescript": "4.3.2"
  }
}
